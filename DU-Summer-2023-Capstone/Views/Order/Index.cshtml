@model IEnumerable<Order>

@{
    ViewBag.Title = "Manage Orders";
}

<div class="container mt-5">
    <h2>Manage Orders</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Order Id</th>
                <th>Customer Name</th>
                <th>Total</th>
                <th>Order Placed</th>
                <th>Completed</th>
                <th>Cancelled</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.FirstName @order.LastName</td>
                        <td>@order.OrderTotal</td>
                        <td>@order.OrderPlaced</td>
                        <td>@(order.Completed ? "Yes" : "No")</td>
                        <td>@(order.Cancelled ? "Yes" : "No")</td>
                        <td>
                            <a asp-action="OrderView" asp-route-orderId="@order.OrderId" class="btn btn-primary mr-2">View</a>
                            


                            @if (!order.Cancelled && !order.Completed)
                            {
                                <a asp-action="CompleteOrder" asp-route-orderId="@order.OrderId" class="btn btn-info mr-2">Mark as Completed</a>
                                <a asp-action="CancelOrder" asp-route-orderId="@order.OrderId" class="btn btn-danger">Cancel Order</a>
                            }

                            

                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>
