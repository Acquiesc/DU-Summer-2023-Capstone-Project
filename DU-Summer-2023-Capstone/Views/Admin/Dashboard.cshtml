@{
    ViewBag.Title = "Admin Dashboard";
}

<h1 class="text-center">Admin Dashboard</h1>

<div class="container mt-5">
    <div class="row">
        <div class="col-12 col-md-6 col-lg-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Pizzas</h5>
                    <p class="card-text">Manage all your pizzas here.</p>
                    <a href="@Url.Action("Index", "Pizza")" class="btn btn-primary">Manage Pizzas</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Orders</h5>
                    <p class="card-text">Manage all your orders here.</p>
                    <a href="@Url.Action("Index", "Order")" class="btn btn-primary">Manage Orders</a>
                </div>
            </div>
        </div>
    </div>
</div>
