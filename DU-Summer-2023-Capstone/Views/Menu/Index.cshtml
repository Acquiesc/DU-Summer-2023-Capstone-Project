@model MenuModel


@{
    ViewBag.Title = "Menu";
}

<!--Menu Header-->
<section id="Menu-Banner" class="container-fluid mb-5" style="background-image: url('/images/Menu-Banner.jpeg'); margin: 0; padding: 0;">
    <div class="container-fluid d-flex justify-content-center align-items-center h-100 mask" style="background-color: rgba(0,0,0,.6); margin: 0; padding: 0;">
        <div class="row justify-content-center align-items-center" style="padding: 0; margin: 0;">
            <div class="col-auto text-center text-white">
                <h1 class="mt-3">Pizza Pete</h1>
                <p><strong class="mt-3">All your favorite pizza from Pizza Pete</strong></p>
                <br/>
                <br />
                <h1 class="mb-3">Menu</h1>
            </div>
        </div>
    </div>
</section>

<!--Menu Display-->
<section class="container mt-5">
    <div id="products-container" class="row align-items-center justify-evenly-below-desktop">

        @foreach (var pizza in Model.Pizzas)
        {
            @if(pizza.InStock){
                @Html.Partial("PizzaSummary", pizza)
            }
            
        }

    </div>
</section>



