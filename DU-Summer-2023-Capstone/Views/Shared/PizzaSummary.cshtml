@model Pizza

<div class="col-auto mb-3">
    <div class="card" style="width: 18rem; height: 600px;">
        <img class="card-img-top" width="275" height="200" src="@Model.ImageUrl" alt="@Model.Name">
        <div class="card-body text-center d-flex flex-column justify-content-between">
            <div>
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text text-start">@Model.ShortDescription</p>
            </div>
            <div class="d-flex flex-column justify-content-evenly">
                <p><strong>@Model.Price.ToString("c")</strong></p>
                <button class="btn btn-primary mt-5"><a  class="btn btn-primary" asp-controller="Cart" asp-action="AddToCart" asp-route-pizzaId="@Model.PizzaId">
                    Add to cart
                </a></button>
                
            </div>
        </div>
    </div>
</div>
