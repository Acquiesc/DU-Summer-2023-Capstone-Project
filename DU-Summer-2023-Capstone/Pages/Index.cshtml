@page
@{
    ViewData["Title"] = "Pizza Pete";
}

<!--Home Page Hero Banner-->
<section id="Index-Hero" class="container-fluid" style="background-image: url('/images/Hero-Pizza.jpeg'); margin: 0; padding: 0;">
    <div class="container-fluid d-flex justify-content-center align-items-center h-100 mask" style="background-color: rgba(0,0,0,.8); margin: 0; padding: 0;">
        <div class="row justify-content-center align-items-center" style="padding: 0; margin: 0;">
            <div class="col-auto text-center text-white">
                <h1>@ViewData["Title"]</h1>
                <strong class="mt-3">All your favorite pizza from Pizza Pete</strong><br />
                <a role="button" class="btn btn-primary mt-5" ahref="/menu">Shop Now</a>
            </div>
        </div>

        <img src="/images/Chef.png" style="position: absolute; bottom: 0; right: 0;" />
    </div>
</section>