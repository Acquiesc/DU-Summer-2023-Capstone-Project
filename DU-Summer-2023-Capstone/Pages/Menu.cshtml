@page
@{
    ViewData["Title"] = "Pizza Pete";
}

<!--Menu Header-->
<section id="Menu-Banner" class="container-fluid mb-5" style="background-image: url('/images/Menu-Banner.jpeg'); margin: 0; padding: 0;">
